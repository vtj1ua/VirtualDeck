@model IEnumerable<VirtualDeckWeb.Models.CardViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="virtual-card-container">
    @foreach (var item in Model)
    {
        <div class="virtual-card">
            <img src="~/Resources/Type/@Html.DisplayFor(modelItem => item.Img) " alt="@Html.DisplayFor(modelItem => item.Img)">
            <img class="@Html.DisplayFor(modelItem => item.BackgroundColorClass)" src="~/Resources/Borders/@Html.DisplayFor(modelItem => item.BackgroundImage)" alt="electric">
            
            <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
            <div>
                <h4>Ataque</h4>
                <p>@Html.DisplayFor(modelItem => item.Attack)</p>
                <h4>Vida</h4>
                <p>@Html.DisplayFor(modelItem => item.Health)</p>
                <h4>Defensa</h4>
                <p>@Html.DisplayFor(modelItem => item.Defense)</p>
                <h4>Velocidad</h4>
                <p>@Html.DisplayFor(modelItem => item.Speed)</p>
            </div>
        </div>

        //Html.RenderPartial("~/Views/Shared/CardDetailsPartialView.cshtml", item);
    }
</div>
