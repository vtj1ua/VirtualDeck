@model IEnumerable<VirtualDeckWeb.Models.PackViewModel>

@{
    ViewBag.Title = "Packs";
}

<ul class="nav justify-content-center">
    <li class="nav-item">
        @Html.ActionLink("Cartas", "Cards")
    </li>
    <li class="nav-item">
        @Html.ActionLink("Sobres", "Packs")
    </li>
    <li class="nav-item">
        @Html.ActionLink("Tokens", "TokenPacks")
    </li>
</ul>

<h2>Sobres</h2>

<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th>
            Precio
        </th>
        <th>
            Imagen
        </th>
        <th>
            Fecha de Registro
        </th>
        <th>
            Máximo de cartas
        </th>
        <th>
            Mínimo de cartas
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Img)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxNumCards)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MinNumCards)
        </td>
        <td>
            @Html.ActionLink("Comprar", "PackDetails", new { id=item.Id })
        </td>
    </tr>
}

</table>
