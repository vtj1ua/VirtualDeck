@model IEnumerable<VirtualDeckWeb.Models.CardViewModel>


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="shop-container">

                @Html.Partial("CardPartial", item)
                
                <div>
                    <button>@Html.ActionLink(linkText: "Ver detalle", actionName: "Details", controllerName: "Card", routeValues: new { id = item.Id }, htmlAttributes: null) </button>
                    <p>@Html.DisplayFor(modelItem => item.Price)</p>
                </div>
            </div>
        </div>
    }
</div>


