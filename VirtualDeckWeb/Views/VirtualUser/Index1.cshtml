
@{
    ViewBag.Title = "Index1";
}

<ul class="pagination">
    @if (ViewBag.Page == 0)
    {


        <li class="disabled">
            @Html.ActionLink("«", "Index1", new { page = ViewBag.Page - 1 })
        </li>
    }
    else
    {
        <li>
            @Html.ActionLink("«", "Index1", new { page = ViewBag.Page - 1 })
        </li>
    }
    @if (ViewBag.Total > 0)
    {
        for (int i = 0; i < ViewBag.Total; i++)
        {


            if (ViewBag.Page == i)
            {
                <li class="active">
                    @Html.ActionLink(i.ToString(), "Index1", new { page = i })
                </li>
            }
            else
            {
                <li>
                    @Html.ActionLink(i.ToString(), "Index1", new { page = i })
                </li>
            }

        }
    }
    @if (ViewBag.Page == ViewBag.Total-1)
    {


        <li class="disabled">
            @Html.ActionLink("»", "Index1", new { page = ViewBag.Page + 1 })
        </li>
    }
    else
    {
        <li>
            @Html.ActionLink("»", "Index1", new { page = ViewBag.Page + 1 })
        </li>
    }
</ul>



