@{
    ViewBag.Title = "TradePublish";
}

@{
    IEnumerable<VirtualDeckWeb.Models.UserCardViewModel> usercards = ViewData["usercards"] as IEnumerable<VirtualDeckWeb.Models.UserCardViewModel>;
    IEnumerable<VirtualDeckWeb.Models.CardViewModel> cards = ViewData["cards"] as IEnumerable<VirtualDeckWeb.Models.CardViewModel>;
}

<div class="container">
    <div class="row ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal pubTrade">
                <div class="cardsTrade">
                    <div class="form-group">
                        <label class="control-label col-md-2">Carta a ofrecer</label>
                        <div class="col-md-10">
                            <a data-toggle="modal" data-backdrop="static" data-target="#UserCards">
                                <img class="imgTrades" src="~/Resources/equis.png" />
                            </a>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Carta requerida</label>
                        <div class="col-md-10">
                            <img class="imgTrades" src="~/Resources/equis.png" />
                        </div>
                    </div>
                </div>

                <div class="form-group divButtonTrade">
                    <div class="">
                        <input type="submit" value="Create" class="btn btn-default action-button" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="UserCards" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="m-modal tradeOff-modal">
        @Html.Partial("UserCardListPartial", usercards)
        <img class="icon-close" data-dismiss="modal" id="close-button" src="~/Resources/borrar.png" alt="Cerrar" />
    </div>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}