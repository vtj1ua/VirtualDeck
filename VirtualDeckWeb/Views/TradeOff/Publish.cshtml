@{
    ViewBag.Title = "TradePublish";
}

@{
    VirtualDeckWeb.Models.UserCardViewModel usercard = ViewData["userCardselected"] as VirtualDeckWeb.Models.UserCardViewModel;
    VirtualDeckWeb.Models.CardViewModel card = ViewData["cardselected"] as VirtualDeckWeb.Models.CardViewModel;
}

<div class="container">
    <div class="row ">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ActionLink("Seleccionar", "SelectUserCardToPublish", new { }, new { @class = "action-button" })
            <div class="form-horizontal pubTrade">
                <div class="cardsTrade">
                    <div class="form-group">
                        <label class="control-label col-md-2">Carta a ofrecer</label>
                        <div class="col-md-10">


                            @if (usercard != null)
                            {
                                @Html.Partial("UserCardPartial", usercard)
                            }
                            else
                            {
                                <img class="imgTrades" src="~/Resources/equis.png" />
                            }
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Carta requerida</label>
                        <div class="col-md-10">
                            @if (card != null)
                            {
                                @Html.Partial("CardPartial", card)
                            }
                            else
                            {
                                <img class="imgTrades" src="~/Resources/equis.png" />
                            }
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
</div>
@if (usercard != null && card != null)
{
    @Html.ActionLink("Crear", "FinishAndPublish", "TradeOff" , new { idOffered = usercard.Id, idDesired = card.Id }, new { @class = "action-button" })
}




<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}